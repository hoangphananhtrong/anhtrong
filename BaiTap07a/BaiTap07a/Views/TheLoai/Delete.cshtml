@model TheLoai
<div class="container">
    <h3>thêm thể loại</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="DeleteConfirm">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Name"> Tên thể loại</label>
            <input asp-for="Name" type="text" class="form-control" readonly/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataCreated"> ngày tạo</label>
            <input asp-for="DataCreated" type="date" class="form-control" readonly/>
            <span asp-validation-for="DataCreated" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary"> xoá</button>
        <a asp-action="Index" class="btn btn-primary"> huỷ</a>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}